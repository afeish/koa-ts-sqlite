{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist/",
    "sourceMap": false,
    "allowJs": true,
    "esModuleInterop": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "watch": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"]
  },

  "include": [
    "src/**/*.*",
    "types/**/*.*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
